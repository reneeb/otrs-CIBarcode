<?xml version="1.0" encoding="utf-8"?>
<otrs_config version="1.0" init="Config">
    <ConfigItem Name="ITSMConfigItemBarcode::BarcodeType" Required="1" Valid="1">
        <Description Translatable="1">Type of barcode generated for the config items.</Description>
        <Group>ITSMConfigItemBarcode</Group>
        <SubGroup>Barcode</SubGroup>
        <Setting>
            <Option SelectedID="EAN13">
                <Item Key="EAN8">EAN8</Item>
                <Item Key="EAN13">EAN13</Item>
                <Item Key="QRcode">QR</Item>
                <Item Key="Code39">Code39</Item>
            </Option>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="ITSMConfigItemBarcode::BarcodeAttribute" Required="1" Valid="1">
        <Description Translatable="1">Attribute that is encoded in the barcode.</Description>
        <Group>ITSMConfigItemBarcode</Group>
        <SubGroup>Barcode</SubGroup>
        <Setting>
            <String Regex="">ConfigItemID</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="ITSMConfigItemBarcode::BarcodeITSMConfigItemURL" Required="0" Valid="0">
        <Description Translatable="1">Encode config item URL in the barcode (overrides ITSMConfigItemBarcode::BarcodeAttribute and only usable with QR codes).</Description>
        <Group>ITSMConfigItemBarcode</Group>
        <SubGroup>Barcode</SubGroup>
        <Setting>
            <Option SelectedID="0">
                <Item Key="0" Translatable="1">No</Item>
                <Item Key="1" Translatable="1">Yes</Item>
            </Option>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="ITSMConfigItemBarcode::RebuildBarcode" Required="1" Valid="1">
        <Description Translatable="1">The barcode should be rebuilt when the barcode type and/or the value of the attribute (or the attribute itself) changed.</Description>
        <Group>ITSMConfigItemBarcode</Group>
        <SubGroup>Barcode</SubGroup>
        <Setting>
            <Option SelectedID="1">
                <Item Key="0" Translatable="1">No</Item>
                <Item Key="1" Translatable="1">Yes</Item>
            </Option>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="ITSMConfigItemBarcode::BarcodeHeight" Required="1" Valid="1">
        <Description Translatable="1">Height of the barcode image.</Description>
        <Group>ITSMConfigItemBarcode</Group>
        <SubGroup>Barcode</SubGroup>
        <Setting>
            <String Regex="">80</String>
        </Setting>
    </ConfigItem>
</otrs_config>
